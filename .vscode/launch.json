{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "--noinput", // Prevents interactive input during testing
                "--verbosity=2" // Optional: Increase output detail
            ],
            "django": true,
            "justMyCode": false,
            "console": "integratedTerminal",
        }
    ]
}
